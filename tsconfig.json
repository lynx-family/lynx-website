{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@site/*": ["./*"],
      "@/*": ["./src/*"],
      "@lynx": ["./src/components/index.tsx"],
      "@lynx/NextSteps": ["./src/components/NextSteps/index.ts"],
      "@assets/*": ["./docs/public/assets/*"],
      "@examples/*": ["./examples/examples_output/*"]
    }
  },
  "include": ["docs", "theme", "rspress.config.ts", "global.d.ts"],
  "mdx": {
    "checkMdx": true
  }
}
